#:import PlotScreen picam.plotscreen.PlotScreen

<PlotScreen>:
    name: 'plot'
    AnchorLayout:
        padding: 5, 40
        anchor_y: 'top'
        anchor_x: 'right'

        Label:
            canvas:
                Color:
                    rgba: 0,0,0,.2
                Rectangle:
                    pos: self.pos
                    size: self.size

            size: '50dp', '50dp'
            font_size: '18sp'
            size_hint: None, None
            text: root.current

    AnchorLayout:
        padding: 0, 0, 60, 0
        id: plot
